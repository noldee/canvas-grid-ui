{
  "name": "canvas-grid-ui",
  "version": "1.0.2",
  "description": "Sistema de grids animado de alto rendimiento con Visual Engines para React",
  "type": "module",
  "main": "./dist/canvas-grid-ui.umd.js",
  "module": "./dist/canvas-grid-ui.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/canvas-grid-ui.es.js",
      "require": "./dist/canvas-grid-ui.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "grid",
    "animation",
    "3d",
    "framer-motion",
    "tailwind",
    "ui-components"
  ],
  "author": "noldee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/noldee/canvas-grid-ui.git"
  },
  "homepage": "https://canvas-grid-ui.netlify.app/",
  "bugs": {
    "url": "https://github.com/noldee/canvas-grid-ui/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "vite build --config vite.config.lib.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "framer-motion": "^10.0.0 || ^11.0.0 || ^12.0.0",
    "tailwindcss": "^3.0.0 || ^4.0.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "framer-motion": "^12.34.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  }
}
